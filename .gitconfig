[user]
    name = Tomas Papan
    email = tomas.papan@gmail.com
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    bra = branch -avv
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    prune = fetch --prune
    undo = reset --soft HEAD^
    stash-all = stash save --include-untracked
    glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[merge]
    conflictstyle = diff3
[push]
    followTags = true
    default = matching
[commit]
    gpgSign = true
[status]
    showUntrackedFiles = all
[transfer]
      fsckobjects = true
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f
[credential]
    helper = cache --timeout=3600

