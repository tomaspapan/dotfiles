startup_message off
setenv LC_CTYPE en_US.UTF-8
defutf8 on
setenv DISPLAY ':0'
nonblock on
vbell off
msgwait 10
term "screen-256color"
defscrollback 1000

screen -t $     0
screen -t $     1
screen -t $     2
screen -t htop  7 htop
screen -t bmon  8 bmon -p eth1
screen -t log   9 tail -f /var/log/messages
select 0


bindkey -k k1 prev
bindkey -k k2 next
bindkey -k k3 screen
bindkey -k k4 detach
bindkey -k k5 title
bindkey -k k8 kill

backtick 1 0 600 meniny -z
backtick 2 0 600 get_ip.sh eth1
backtick 3 0 0   uname -r
backtick 4 0 60  upt.sh
backtick 5 0 60  free.sh
backtick 6 0 600 cat /tmp/weather.status 
backtick 7 0 10  load.sh

caption always "%{= bb}%{+b w}Screen: %n | %h %=%1`|%3`|%4`|%2`|%D%d%M|%c"
hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%< %=%7`|%5`|%6`"
